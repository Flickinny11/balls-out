# Environment Configuration for LTB Audio Platform

# Application Environment
NODE_ENV=development
PORT=8000
FRONTEND_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://ltb_user:ltb_password@localhost:5432/ltb_audio

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production-with-random-64-char-string

# AI/ML Services
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Payment Processing
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Cloud Storage (AWS S3)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_S3_BUCKET=ltb-audio-storage
AWS_REGION=us-east-1
CLOUDFRONT_DOMAIN=your_cloudfront_domain.cloudfront.net

# Email Service (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@ltb-audio.com

# Real-time Services (Pusher alternative)
PUSHER_APP_ID=your_pusher_app_id
PUSHER_KEY=your_pusher_key
PUSHER_SECRET=your_pusher_secret
PUSHER_CLUSTER=us2

# Social Authentication
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

APPLE_CLIENT_ID=your_apple_client_id
APPLE_CLIENT_SECRET=your_apple_client_secret

GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn_for_error_tracking
MIXPANEL_TOKEN=your_mixpanel_token_for_analytics

# File Upload Configuration
MAX_FILE_SIZE=100MB
UPLOADS_DIR=./uploads
PROCESSED_DIR=./processed

# Audio Processing
FFMPEG_PATH=/usr/local/bin/ffmpeg
FFPROBE_PATH=/usr/local/bin/ffprobe

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://ltb-audio.com,https://www.ltb-audio.com

# SSL/TLS (Production)
SSL_CERT_PATH=/etc/ssl/certs/ltb-audio.crt
SSL_KEY_PATH=/etc/ssl/private/ltb-audio.key